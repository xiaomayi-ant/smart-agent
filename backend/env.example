#LLM（openai）
LLM_PROVIDER=openai
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
LLM_MODEL=gpt-4o
STRUCTURED_PLANNER_METHOD=auto

# LLM（DeepSeek）
LLM_PROVIDER=deepseek
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
STRUCTURED_PLANNER_METHOD=auto

# 仅测试通信避免下载HanLP
INTENT_ENABLED=false

# Server
HOST=0.0.0.0
PORT=3001
DEBUG=true
CORS_ORIGINS=["*"]

# MySQL
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=

# Milvus
MILVUS_ADDRESS=sx:19530
MILVUS_SSL=false

#silicon
OPENAI_EMBED_API_KEY=
OPENAI_EMBED_BASE_URL=https://api.siliconflow.cn/v1
OPENAI_EMBED_MODEL=Qwen/Qwen3-Embedding-0.6B
OPENAI_EMBED_DIM=1024

# Vector
DOCUMENTS_COLLECTION_NAME=
RESET_DOCUMENTS_COLLECTION_ON_STARTUP=false

# Web search (Tavily)
TAVILY_API_KEY=tvlyx-JUMRXL6iN


# PostgreSQL (for thread persistence)

PG_DSN=postgresql://@:5432/chat_history?sslmode=require

# Voice / ASR
# Enable to register /api/asr endpoints
ENABLE_VOICE=true
# Whisper model size: tiny, base, small, medium, large
WHISPER_MODEL=base
# Force ASR language (e.g., zh, en). Leave empty for auto-detect
ASR_LANGUAGE=


#Neo4j
# Neo4j / Graphiti configuration
# Provide connection info for graph operations/tools. Keep credentials safe.
NEO4J_URI=
NEO4J_USER=
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

#JWT
JWT_SECRET=

#DEBUG_GRAPH
DEBUG_GRAPH_EVENTS=0

#TRACE
TRACE_EVENTS=true
